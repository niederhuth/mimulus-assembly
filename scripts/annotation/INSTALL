#Maker without MPI
#Install condo environment - has most of prerequisites
conda env create -f maker.yml
conda activate maker
#Install maker
Download maker https://www.yandell-lab.org/software/maker.html
tar -xzvf 
cd maker/src
perl Build.pl
./Build install
cd ..
cp bin/* ~/miniconda3/envs/maker/bin/
cp -R lib/* ~/miniconda3/envs/maker/lib/
cp -R src ~/miniconda3/envs/maker/
cp -R perl ~/miniconda3/envs/maker/
#

Download genemark-ES http://exon.gatech.edu/GeneMark/license_download.cgi
unzip 
cd gmes_linux_64
perl change_path_in_perl_scripts.pl ~/miniconda3/envs/maker/bin/
and copy contents to miniconda3/envs/maker/bin/

#Maker with MPI
#Install condo environment - has most of prerequisites
conda env create -f maker_mpi.yml
conda activate maker
#


mkdir build
cd build
unset F90
unset F90FLAGS
../mpich-4.0.1/configure FFLAGS=-fallow-argument-mismatch FCFLAGS=-fallow-argument-mismatch --prefix=/mnt/home/niederhu/miniconda3/envs/maker_mpi/bin/ 2>&1 | tee c.txt